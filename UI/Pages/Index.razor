@page "/"

<div style="background-color:#FFCE0B;" class="d-flex justify-content-center min-vh-100">
    <article class="main d-flex flex-column m-auto">
        <nav class="header d-flex flex-row-reverse">
            <button class="header__button">
                <img height="24" width="24" class="header__icon" src="_content/UI/edit-icon.svg" />
            </button>

            <button class="header__button">
                <img height="24" width="24" class="header__icon" src="_content/UI/exit-icon.svg" />
            </button>
        </nav>

        <header class="profile d-flex justify-content-center align-items-center">
            <img class="profile-background" src="_content/UI/profile-background.svg" />

            <div class="inner-profile d-inline-flex flex-row">
                <img height="60" width="60" class="inner-profile__photo" src="https://placehold.jp/000000/ffffff/60x60.png" />

                <div class="inner-profile-text">
                    <h1 class="inner-profile-text__name title">Pavel Sergeev</h1>
                    <p class="inner-profile-text__description">ASP.Net Developer</p>
                </div>
            </div>
        </header>

        <section class="socials">
            <h2 class="socials__title title">Contacts</h2>
            <ul class="socials-list">
                <li class="d-flex flex-row">
                    <a class="socials-list-link" href="https://gmail.com" target="_blank">
                        <img height="20" width="20" class="socials-list__icon" src="_content/UI/mail-icon.svg" />
                        <p class="socials-list__text title">2916675@gmail.com</p>
                    </a>
                </li>
            </ul>
        </section>
    </article>
</div>
