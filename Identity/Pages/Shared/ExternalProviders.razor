@if (_providers.Any())
{
    <section class="external-providers">
        <h2 class="title">@Localizer["Sign in using"]</h2>

        <ul class="providers">
            @foreach (var provider in _providers)
            {
                <li class="provider">
                    <a class="provider__link" href="@GetProviderLink(provider.AuthenticationScheme)">
                        <img src="@GetIconPath(provider.AuthenticationScheme)" width="20" height="20" alt="@provider.DisplayName" />
                    </a>
                </li>
            }
        </ul>
    </section>
}
