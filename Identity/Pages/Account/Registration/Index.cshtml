@page
@model Identity.Pages.Account.Registration.IndexModel

<h1 class="title">@Model.Localizer["Registration"]</h1>

<form method="post" data-ajax="true" data-ajax-method="post" data-ajax-success="submit()">
    <div class="form-group form-floating">
        <input asp-for="Input.Username" class="form-control" autocomplete="username"
               data-val-remote-additionalfields="__RequestVerificationToken" />
        <label asp-for="Input.Username"></label>
        <span asp-validation-for="Input.Username"></span>
    </div>

    <div class="form-group form-floating">
        <input asp-for="Input.Email" class="form-control" autocomplete="email" />
        <label asp-for="Input.Email"></label>
        <span asp-validation-for="Input.Email"></span>
    </div>

    <div class="form-group form-floating">
        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" />
        <label asp-for="Input.Password"></label>
        <span asp-validation-for="Input.Password"></span>
    </div>

    <div class="form-group form-floating">
        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" />
        <label asp-for="Input.ConfirmPassword"></label>
        <span asp-validation-for="Input.ConfirmPassword"></span>
    </div>

    <button class="form-button btn btn-primary" type="submit">@Model.Localizer["Register"]</button>
</form>
