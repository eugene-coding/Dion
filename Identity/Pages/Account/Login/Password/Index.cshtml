@page
@using Identity.Pages.Login.Password
@model Identity.Pages.Login.Password.IndexModel

<h1 class="title">@Model.Localizer["Sign in"]</h1>

<form id="form" class="mb-3" method="post" data-ajax="true" data-ajax-method="post" data-ajax-success="submit()">
    <div class="form-floating mb-3">
        <input asp-for="Password" class="form-control" autocomplete="current-password" autofocus />
        <label asp-for="Password"></label>
        <span asp-validation-for="Password"></span>
    </div>

    <div>
        <a class="btn btn-secondary" href="@Model.LoginUrl">@Model.Localizer["Back"]</a>

        <button id="@IndexModel.SubmitButtonId"
                class="form-button btn btn-primary" type="submit">
            @Model.Localizer["Sign in"]
        </button>
    </div>
</form>

<component type="typeof(ExternalProviders)"
           render-mode="Static"
           param-returnUrl="@Model.ReturnUrl" />

@section Scripts {
    <script>
        const input = document.getElementById("@nameof(Model.Password)");
        const button = document.getElementById("@IndexModel.SubmitButtonId");

        validateInput(input, button);
    </script>
}
