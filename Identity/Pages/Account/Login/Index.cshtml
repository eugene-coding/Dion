@page
@model Identity.Pages.Login.Index

<h1 class="mb-3">@Model.Text["HeadingTitle"]</h1>

<form class="mb-3" method="post" data-ajax="true" data-ajax-method="post" data-ajax-success="success">
    <div class="form-floating mb-3">
        <input class="form-control" placeholder="@Model.Text[nameof(@Model.Username)]" asp-for="Username" autofocus />
        <label asp-for="Username"></label>
        <span asp-validation-for="Username"></span>
    </div>

    <button class="btn btn-primary" id="@Model.SubmitButtonId">@Model.Text["Login"]</button>
</form>

@if (Model.View.VisibleExternalProviders.Any())
{
    <ul class="list-inline">
        @foreach (var provider in Model.View.VisibleExternalProviders)
        {
            <li class="list-inline-item">
                <a class="btn btn-secondary"
           asp-page="/ExternalLogin/Challenge"
           asp-route-scheme="@provider.AuthenticationScheme"
           asp-route-returnUrl="@Model.ReturnUrl">
                    @provider.DisplayName
                </a>
            </li>
        }
    </ul>
}

@section Head {
    <script src="~/js/scripts.js"></script>
}

@section Scripts {
    <script>
        success = () => {
            location = location.pathname + '/Password' + location.search;
        }
    </script>

    <script>
        const input = document.getElementById("@nameof(Model.Username)");
        const button = document.getElementById("@Model.SubmitButtonId");

        validateInput(input, button);
    </script>
}
